<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="16dp">


    <TextView
        android:id="@+id/Calea_Gabriela_question_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/Intrebare_quiz"
        android:padding="16dp" />


    <RadioGroup
        android:id="@+id/Calea_Gabriela_answers_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:divider="@drawable/divider"
        android:dividerHeight="16dp"
        android:padding="16dp" />


    <Button
        android:id="@+id/Calea_Gabriela_next_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/Text_buton_urm_intrebare"
        android:backgroundTint="@color/dark_pink"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
