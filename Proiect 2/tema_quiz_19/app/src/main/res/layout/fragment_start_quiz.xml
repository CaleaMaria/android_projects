<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <TextView
        android:id="@+id/Calea_Gabriela_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Domeniu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/Calea_Gabriela_domain_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:tint="@color/teal_200"
        android:src="@drawable/ic_compass" />



    <Button
        android:id="@+id/Calea_Gabriela_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_buton_start_quiz"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/Calea_Gabriela_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dificultate_quiz"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center" />


    <RatingBar
        android:id="@+id/Calea_Gabriela_difficulty_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="3"
        android:isIndicator="true" />

</LinearLayout>
